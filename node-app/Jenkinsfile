pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning the repository...'
                // Repo already cloned by Jenkins
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    dir('node-app') {
                        bat 'docker build -t node-jenkins-app .'
                    }
                }
            }
        }

        /* Optional Cleanup Stage
        stage('Stop and Remove Existing Container') {
            steps {
                script {
                    echo 'Stopping any existing container...'
                    bat '''
                    docker stop node-jenkins-container || exit 0
                    docker rm node-jenkins-container || exit 0
                    '''
                }
            }
        }
        */

        stage('Run Docker Container') {
            steps {
                script {
                    echo 'Running Docker container...'
                    bat 'docker run -d --name node-jenkins-container -p 3000:3000 node-jenkins-app'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
